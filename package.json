{
  "name": "todo",
  "version": "1.0.0",
  "description": "",
  "author": "Jason Etcovitch <jasonetco@gmail.com> (https://github.com/jasonetco/todo)",
  "license": "ISC",
  "repository": "https://github.com/JasonEtco/todo.git",
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "test": "jest --coverage && standard",
    "test:update": "jest -u"
  },
  "standard": {
    "env": {
      "jest": true
    }
  },
  "bin": {
    "todo": "./bin/todo.js"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/tests/fixtures/",
      "<rootDir>/tests/helpers.js",
      "<rootDir>/tests/setup.js"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/tests/helpers.js",
      "<rootDir>/tests/setup.js",
      "/node_modules/"
    ]
  },
  "dependencies": {
    "@octokit/rest": "^15.1.7",
    "chalk": "^2.3.1",
    "commander": "^2.14.1",
    "hbs": "^4.0.1",
    "parse-diff": "^0.5.1",
    "probot": "^7.3.1"
  },
  "devDependencies": {
    "jest": "^23.2.0",
    "smee-client": "^1.0.1",
    "standard": "^11.0.0"
  },
  "engines": {
    "node": ">= 8.9.4",
    "npm": ">= 5.0.0"
  },
  "now": {
    "alias": "todo",
    "env": {
      "APP_ID": "@app-id",
      "NODE_ENV": "production",
      "PRIVATE_KEY": "@private-key",
      "WEBHOOK_SECRET": "@webhook-secret"
    }
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  }
}
